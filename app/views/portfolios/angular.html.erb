<h1>Angular items</h1>



<%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %>

<% @portfolio_items.each do |item| %>
    <p><%= link_to item.title, portfolio_show_path(item) %></p>
    <p><%= item.subtitle%></p>
    <p><%= item.body %></p>
    <p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
    <%= link_to "Edit", edit_portfolio_path(item) if logged_in?(:site_admin)  %>
    <td><%= link_to 'Delete Portfolio Item', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>

    <% end %>